@model ProjectChubb.Models.Seguro


@{
    ViewData["Title"] = "EditSeguro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editor Seguro</h1>


<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <form asp-action="EditSeguro" method="post">
                <input type="hidden" asp-for="IdSeguro" />

                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                <div class="form-group">
                    <label asp-for="NombreSeguro" class="control-label">Nombre Seguro:</label>
                    <input asp-for="NombreSeguro" class="form-control" />
                    <span asp-validation-for="NombreSeguro" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodigoSeguro" class="control-label">Codigo:</label>
                    <input asp-for="CodigoSeguro" class="form-control" />
                    <span asp-validation-for="CodigoSeguro" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValorSeguro" class="control-label">Valor:</label>
                    <input asp-for="ValorSeguro" class="form-control" />
                    <span asp-validation-for="ValorSeguro" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Prima" class="control-label">Prima:</label>
                    <input asp-for="Prima" class="form-control" />
                    <span asp-validation-for="Prima" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="FechaCreacionSeguro" class="control-label">Fecha Creacion:</label>
                    <input asp-for="FechaCreacionSeguro" class="form-control" />
                    <span asp-validation-for="FechaCreacionSeguro" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="RangoEdadSeguro" class="control-label">Rango Edad:</label>
                    <input asp-for="RangoEdadSeguro" class="form-control" />
                    <span asp-validation-for="RangoEdadSeguro" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="PorcentajeSeguro" class="control-label">%:</label>
                    <input asp-for="PorcentajeSeguro" class="form-control" />
                    <span asp-validation-for="PorcentajeSeguro" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label @*asp-for="IdTipoSeguro"*@ class="control-label">Tipo Seguro:</label>
                    @Html.DropDownList("IdTipoSeguro", (IEnumerable<SelectListItem>)ViewBag.opcionestipos, null, new { @class = "form-control" })
                    <a asp-controller="Seguro" asp-action="CreateTipoSeguro">Crear Tipo Seguro</a>
                    <span @*asp-validation-for="IdTipoSeguro"*@ class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="EstadoSeguro" class="control-label">Estado:</label>
                    <input asp-for="EstadoSeguro" class="form-control" />
                    <span asp-validation-for="EstadoSeguro" class="text-danger"></span>

                </div>


                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear Seguro" />
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
